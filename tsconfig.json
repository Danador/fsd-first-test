{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/shared/ui/*"
      ],
      "@partials/*": [
        "src/partials/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@processes/*": [
        "src/processes/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@images/*": [
        "public/images/*"
      ],
      "@data/*": [
        "src/shared/data/*"
      ],
      "@tools/*": [
        "src/tools/*"
      ],
    },

    "jsx": "preserve"
  },
  "include": [
    "src"
  ]
}
